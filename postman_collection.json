              "host": ["{{base_url_rooms}}"],
              "path": ["rooms", "available", "search"],
              "query": [
                {
                  "key": "start_time",
                  "value": "2024-12-01T10:00:00"
                },
                {
                  "key": "end_time",
                  "value": "2024-12-01T12:00:00"
                },
                {
                  "key": "min_capacity",
                  "value": "10"
                }
              ]
