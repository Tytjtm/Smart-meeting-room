{
  "info": {
    "name": "Smart Meeting Room Management System",
    "description": "Complete API collection for all microservices",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url_users",
      "value": "http://localhost:8001"
    },
    {
      "key": "base_url_rooms",
      "value": "http://localhost:8002"
    },
    {
      "key": "base_url_bookings",
      "value": "http://localhost:8003"
    },
    {
      "key": "base_url_reviews",
      "value": "http://localhost:8004"
    },
    {
      "key": "jwt_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Users Service",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"testpassword123\",\n  \"full_name\": \"Test User\",\n  \"role\": \"REGULAR_USER\"\n}"
            },
            "url": {
              "raw": "{{base_url_users}}/register",
              "host": ["{{base_url_users}}"],
              "path": ["register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"jwt_token\", jsonData.access_token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpassword123\"\n}"
            },
            "url": {
              "raw": "{{base_url_users}}/login",
              "host": ["{{base_url_users}}"],
              "path": ["login"]
            }
          }
        },
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url_users}}/users",
              "host": ["{{base_url_users}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Get User by Username",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url_users}}/users/testuser",
              "host": ["{{base_url_users}}"],
              "path": ["users", "testuser"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"Updated Name\",\n  \"email\": \"updated@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url_users}}/users/testuser",
              "host": ["{{base_url_users}}"],
              "path": ["users", "testuser"]
            }
          }
        },
        {
          "name": "Get User Bookings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url_users}}/users/testuser/bookings",
              "host": ["{{base_url_users}}"],
              "path": ["users", "testuser", "bookings"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url_users}}/users/testuser",
              "host": ["{{base_url_users}}"],
              "path": ["users", "testuser"]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url_users}}/health",
              "host": ["{{base_url_users}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
